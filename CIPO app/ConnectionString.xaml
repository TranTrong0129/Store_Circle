<Window x:Class="CIPO_app.ConnectionString"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CIPO_app" WindowStartupLocation="CenterScreen" 
        mc:Ignorable="d"
        Title="ConnectionString" Height="200" Width="600">
    <Grid>
        <TextBox Name="connecttring" Width="400" Height="30" VerticalAlignment="Top" Margin=" 30" Text="server=localhost;database=data_cipo;uid=root;pwd=root"/>
        <Button x:Name="btnconnect" Width="200" Height="30" VerticalAlignment="Top" Margin="0 90 0 0" Content="Connect Data" Click="connectiondata_event"/>
    </Grid>
</Window>
